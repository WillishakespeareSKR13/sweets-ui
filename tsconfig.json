{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ixulabs/ui": ["index.ts"],
      "@atoms": ["@atoms/index.ts"],
      "@atoms/*": ["@atoms/*"],
      "@hooks": ["@hooks/index.ts"],
      "@hooks/*": ["@hooks/*"],
      "@layouts": ["@layouts/index.ts"],
      "@layouts/*": ["@layouts/*"],
      "@molecules": ["@molecules/index.ts"],
      "@molecules/*": ["@molecules/*"],
      "@organisms": ["@organisms/index.ts"],
      "@organisms/*": ["@organisms/*"],
      "@redux": ["@redux/index.ts"],
      "@Redux/*": ["src/redux/*"],
      "@redux/*": ["@redux/*"],
      "@Layouts/*": ["src/layouts/*"]
    },
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "dom.iterable"],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["**/*", "**/*x", "**/*.d.ts"],
  "exclude": ["node_modules", "build", "**/*.stories.tsx", "**/*.test.tsx"]
}
